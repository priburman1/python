avg_age = 80                              ## The average age taken is 80
curr_age = int(input("Enter your age :"))
mon_left = (avg_age - curr_age)*12
days_left = (avg_age - curr_age)*30               ## AGE CALCULATOR
yrs_left = avg_age - curr_age
if curr_age < avg_age :
    print("You have",yrs_left,"years",mon_left,"months","and",days_left," days left TO LIVE")
if curr_age > avg_age:
    print("You're Dead...")
